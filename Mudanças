CREATE TABLE MVA_MODELO_VEICULO_MARCA(
	PK_MVA_IDMODELO SERIAL,
	MVA_COD_IDMARCA INT,
	MVA_NOM_NOMEMARCA VARCHAR,
	MVA_NOM_NOMEMODELO VARCHAR,
	MVA_TIP_TIPOVEICULO VARCHAR
);
ALTER TABLE MVA_MODELO_VEICULO_MARCA ADD CONSTRAINT PK_MVA_IDMODELO PRIMARY KEY(PK_MVA_IDMODELO);
SELECT*FROM MVA_MODELO_VEICULO_MARCA;
INSERT INTO MVA_MODELO_VEICULO_MARCA(MVA_NOM_NOMEMARCA,MVA_COD_IDMARCA,MVA_TIP_TIPOVEICULO,MVA_NOM_NOMEMODELO) VALUES 
