	('NISSAN',3,'CARRO','FRONTIER'),('NISSAN',3,'CARRO','KICKS'),('YAMAHA',4,'MOTO','NEO 125 USB'),('YAMAHA',4,'MOTO','FACTOR'),('HYUNDAI',5,'CARRO','HB20S'),('HYUNDAI',5,'CARRO','HB20');
ALTER TABLE VEI_VEICULO ADD FK_MVA_IDMODELO INT;
ALTER TABLE VEI_VEICULO ADD CONSTRAINT FK_MVA_IDMODELO FOREIGN KEY(FK_MVA_IDMODELO) REFERENCES MVA_MODELO_VEICULO_MARCA(PK_MVA_IDMODELO);
UPDATE VEI_VEICULO SET FK_MVA_IDMODELO = FK_MOD_IDMODELO_VEI;
ALTER TABLE VEI_VEICULO RENAME FK_MVA_IDMODELO TO FK_MVA_IDMODELO_VEI;
